const nowGenerator = () =>{

    const now = new Date();
    const day = now.getDate();
    const monthNames = [
    'January', 'February', 'March', 'April',
    'May', 'June', 'July', 'August',
    'September', 'October', 'November', 'December'
    ];
    const month = monthNames[now.getMonth()];
    const actualDate= `${day} ${month}`;

    return actualDate;
}

module.exports = nowGenerator;